{
  "name": "soundboard",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "start": "npm-run-all --parallel dev css:watch",
    "dev": "vite --mode development",
    "css": "npm-run-all css:compile css:prefix css:minify",
    "css:compile": "dotenv -e .env-development -- cmd /C \"sass --load-path=node_modules --style expanded --source-map --embed-sources --no-error-css --quiet %SCSS_MAIN_FILE%:%CSS_MAIN_FILE%\"",
    "css:minify": "dotenv -e .env-development -- cmd /C \"cd %CSS_DIRECTORY% && cleancss -O1 --format breakWith=lf --with-rebase --source-map --source-map-inline-sources --output ./ --batch --batch-suffix .min *.css !*.min.css\"",
    "css:prefix": "dotenv -e .env-development -- cmd /C \"postcss --map --replace %CSS_DIRECTORY%\\*.css !%CSS_DIRECTORY%\\*.min.css\"",
    "css:watch": "dotenv -e .env-development -- cmd /C \"nodemon --watch %SCSS_DIRECTORY%\\ --ext scss --exec npm run css\"",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.10.1",
    "bootstrap": "^5.3.8",
    "lodash": "^4.17.21",
    "prop-types": "^15.8.1",
    "react": "^19.2.0",
    "react-bootstrap": "^2.10.10",
    "react-dom": "^19.2.0",
    "react-redux": "^9.2.0",
    "react-router": "^7.9.6",
    "slugify": "^1.6.6",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@inquirer/prompts": "^8.0.1",
    "@types/react": "^19.2.6",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.22",
    "clean-css-cli": "^5.6.3",
    "dotenv": "^17.2.3",
    "dotenv-cli": "^11.0.0",
    "eslint": "^9.39.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsonc": "^2.21.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "eslint-plugin-sort": "^4.0.0",
    "globals": "^16.5.0",
    "i18next-parser": "^9.3.0",
    "nodemon": "^3.1.11",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "postcss-scss": "^4.0.9",
    "sass": "^1.94.2",
    "semver": "^7.7.3",
    "sonarqube-scanner": "^4.3.2",
    "stylelint": "^16.26.0",
    "stylelint-config-standard-scss": "^16.0.0",
    "stylelint-config-twbs-bootstrap": "^16.1.0",
    "vite": "^7.2.4",
    "vite-jsconfig-paths": "^2.0.1",
    "vite-plugin-pwa": "^1.1.0"
  }
}
